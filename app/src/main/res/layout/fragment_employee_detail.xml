<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/employee_detail_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Detail_label_text"
        android:gravity="center"
        android:layout_alignParentTop="true" />
    <TextView
        android:id="@+id/employee_detail_discipline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/LargeTextStyle"
        android:layout_below="@id/employee_detail_text"
        android:gravity="center" />

    <android.support.v7.widget.CardView
        android:id="@+id/detail_cardview_background_emp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/employee_detail_image"
            android:layout_width="@dimen/detail_image_height"
            android:layout_height="@dimen/detail_image_height"
            android:scaleType="centerInside"/>

    </android.support.v7.widget.CardView>


</RelativeLayout>